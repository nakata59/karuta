<%= form_with model: @karutum, url: title_karutas_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :serial %>
    <%= f.text_field :serial, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :audio %>
    <%= f.file_field :audio %>
  </div>
  <div>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <%= f.submit '登録', class: 'btn btn-primary' %>
<% end %>